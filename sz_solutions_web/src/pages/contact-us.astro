---
import Button from '../components/shared/Button.astro';
import Container from '../components/shared/Container.astro';
import Paragraph from '../components/shared/Paragraph.astro';
import Layout from '../layouts/Layout.astro';
---

<Layout title="Sobre nosotros">
	<main class="flex flex-col gap-y-20 md:gap-y-32 overflow-hidden">
		<section class="relative pt-32 lg:pt-36">
			<Container className={"flex flex-col lg:flex-row gap-10 lg:gap-12"}>
				<div>
					<div class="mx-auto text-center max-w-xl md:max-w-2xl relative">
						<h1 class="text-3xl/tight sm:text-4xl/tight md:text-5xl/tight font-bold text-heading-1">
							Contact us
						</h1>
					</div>
				<form id="contact-form" name="contact form" class="mt-4 flex flex-col gap-3">
					<input type="hidden" name="form-name" value="contact" />
					<Paragraph>
					<label for="contact-name" class="mb-1 text-gray-600">Name</label>
					<input
						type="text"
						class="form__input"
						name="name"
						id="contact-name"
						placeholder="Your preferred name"
						required
					/>
					</Paragraph>
					<Paragraph>
					<label for="contact-email" class="mb-1 text-gray-600">Email</label>
					<input
						type="email"
						class="form__input"
						name="email"
						id="contact-email"
						inputmode="email"
						placeholder="Your best contact email"
						required
					/>
					</Paragraph>
					<Paragraph>
					<label for="contact-message" class="text-gray-600">Message</label>
					<textarea
						name="message"
						class="form__input"
						id="contact-message"
						rows="4"
						placeholder="write your message here"
						required
					></textarea>
					</Paragraph>
					<Button variant={"primary"}>
						<span class="text-white relative z-[5]">Send</span>
					</Button>
					<label for="emai" class="sr-only">Real users skip this field</label>
					<input id="emai" type="text" name="emai" class="sr-only" tabindex="-1" />
				</form>
				</div>
			</Container>
		</section>
	</main>
</Layout>